# OS et IDE files
.DS_Store
.idea/
.vscode/
*.sublime-projet
*.sublime-workspace
*.log

# Ignore directories generated by NPM
/node_modules/

# Ignore directories generated by Composer
/composer.phar
/vendor/

# Ignore data
/data/*
!/data/.gitkeep

# Ignore Wordpress install directory
/web/wp/

# Ignore dynamic files that might be edited by WordPress
/web/.htaccess
/web/wp-content/db.php
/web/wp-content/advanced-cache.php

# Ignore mu-plugins, plugins and themes installed via composer
# but do not ignore custom ones for the current project
/web/wp-content/*/*
!/web/wp-content/*/.gitkeep

# Add exception for the project's theme and plugins
!/web/wp-content/themes/studiometa
!/web/wp-content/mu-plugins/studiometa-plugin-disabler/
!/web/wp-content/plugins/acfml
!/web/wp-content/plugins/sitepress-multilingual-cms
!/web/wp-content/plugins/wpml-string-translation
!/web/wp-content/plugins/wpml-translation-management
!/web/wp-content/plugins/gravityforms
!/web/wp-content/plugins/gravityforms-multilingual
# !/web/wp-content/mu-plugins/...

# Ignore .env and config files as they are personal
.env
.htpasswd
/web/wp-config.php
